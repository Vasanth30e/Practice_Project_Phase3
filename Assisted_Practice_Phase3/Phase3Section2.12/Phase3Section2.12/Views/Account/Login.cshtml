@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<div class="container">
    <form method="post" action="/Home/HomeLoginAction">
        <div class="row">
            <div class="col-sm-5">
                <div class="row">
                    <div class="col-sm-4">User Id</div>
                    <div class="col-sm-8"><input class="form-control" name="userid" /></div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Password</div>
                    <div class="col-sm-8"><input class="form-control" name="pwd" type="password" /></div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button class="btn btn-default">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

